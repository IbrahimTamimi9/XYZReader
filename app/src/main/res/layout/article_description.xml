<com.vpaliy.xyzreader.ui.view.TranslatableLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/details_background"
    android:orientation="vertical"
    android:transitionName="@string/background_transition"
    android:padding="@dimen/spacing_large"
    android:background="@color/colorAccent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        tools:text="I Love San Francisco"
        style="@style/Widget.MainTitle"
        android:transitionName="@string/title_transition"
        android:textColor="@color/white_50"
        android:id="@+id/article_title"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/article_author"
        tools:text="Walter Paliy"
        android:transitionName="@string/author_transition"
        android:drawableStart="@drawable/ic_feather_"
        android:drawableLeft="@drawable/ic_feather_"
        android:textColor="@color/white_50"
        style="@style/Widget.Subtitle"
        android:layout_marginTop="@dimen/spacing_medium"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/article_title"
        app:layout_constraintLeft_toLeftOf="@+id/article_title" />

    <TextView
        tools:text="4-th of July"
        android:transitionName="@string/date_transition"
        android:drawableLeft="@drawable/ic_date_range_black_24dp"
        android:drawableStart="@drawable/ic_date_range_black_24dp"
        android:id="@+id/article_date"
        style="@style/Widget.Subtitle"
        android:textColor="@color/white_50"
        app:layout_constraintTop_toTopOf="@+id/article_author"
        app:layout_constraintBottom_toBottomOf="@+id/article_author"
        app:layout_constraintLeft_toRightOf="@+id/article_author"
        android:layout_marginStart="@dimen/spacing_big"
        android:layout_marginLeft="@dimen/spacing_big"
        app:layout_constraintVertical_bias="1.0" />

</com.vpaliy.xyzreader.ui.view.TranslatableLayout>