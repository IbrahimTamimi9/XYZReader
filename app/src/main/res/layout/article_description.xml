<com.vpaliy.xyzreader.ui.view.TranslatableLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/details_background"
    android:orientation="vertical"
    android:transitionName="@string/background_transition"
    android:padding="@dimen/details_vertical_padding"
    tools:background="@color/colorAccent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        tools:text="I Love San Francisco"
        android:textSize="@dimen/details_main_title_size"
        style="@style/Widget.MainTitle"
        android:transitionName="@string/title_transition"
        android:textColor="@color/white_50"
        android:id="@+id/article_title"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/article_author"
        tools:text="Walter Paliy"
        android:maxLength="@integer/article_author_max_length"
        android:ellipsize="end"
        android:transitionName="@string/author_transition"
        android:drawableStart="@drawable/ic_bigger_feather"
        android:drawableLeft="@drawable/ic_bigger_feather"
        android:textColor="@color/white_50"
        style="@style/Widget.Subtitle"
        android:textSize="@dimen/details_subtitle_size"
        android:layout_marginTop="@dimen/spacing_medium"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/article_title"
        app:layout_constraintVertical_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        tools:text="4-th of July"
        android:transitionName="@string/date_transition"
        android:drawableLeft="@drawable/ic_bigger_date"
        android:drawableStart="@drawable/ic_bigger_date"
        android:id="@+id/article_date"
        android:textSize="@dimen/details_subtitle_size"
        style="@style/Widget.Subtitle"
        android:textColor="@color/white_50"
        android:layout_marginStart="@dimen/spacing_big"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/article_author"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/article_author"
        android:layout_marginBottom="0dp"
        app:layout_constraintLeft_toRightOf="@+id/article_author"
        android:layout_marginLeft="8dp"
        app:layout_constraintHorizontal_bias="0.39"
        app:layout_constraintVertical_bias="1.0" />

</com.vpaliy.xyzreader.ui.view.TranslatableLayout>